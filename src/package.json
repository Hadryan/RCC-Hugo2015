{
  "name": "RCC",
  "version": "1.5.0",
  "description": "Site framework based on Jayden Seric's barebones and BassCSS.",
  "author": "Rick Cogley <rick@cogley.info>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RickCogley/RCC-Hugo2015"
  },
  "keywords": [
    "Basscss",
    "Bassplate",
    "Jayden Seric Barebones",
    "Boilerplate",
    "CSS",
    "OOCSS",
    "cssnext"
  ],
  "bugs": {
    "url": "https://github.com/RickCogley/RCC-Hugo2015/issues"
  },
  "homepage": "http://rick.cogley.info",
  "main": "index.js",
  "dependencies": {
    "basscss": "^7.1.0",
    "basscss-align": "latest",
    "basscss-background-colors": "latest",
    "basscss-background-images": "0.0.9",
    "basscss-base-forms": "latest",
    "basscss-base-reset": "latest",
    "basscss-base-tables": "latest",
    "basscss-base-typography": "latest",
    "basscss-border-colors": "^1.1.1",
    "basscss-borders": "latest",
    "basscss-btn": "latest",
    "basscss-btn-outline": "latest",
    "basscss-btn-primary": "latest",
    "basscss-btn-sizes": "^1.1.0",
    "basscss-color-base": "latest",
    "basscss-color-forms": "latest",
    "basscss-color-forms-dark": "latest",
    "basscss-color-tables": "latest",
    "basscss-colors": "latest",
    "basscss-defaults": "latest",
    "basscss-grid": "latest",
    "basscss-input-range": "latest",
    "basscss-media-object": "latest",
    "basscss-positions": "latest",
    "basscss-progress": "latest",
    "basscss-responsive-states": "latest",
    "basscss-responsive-white-space": "latest",
    "basscss-table-object": "latest",
    "basscss-type-scale": "latest",
    "basscss-ui-utility-groups": "^1.0.1",
    "basscss-utility-headings": "latest",
    "basscss-utility-layout": "latest",
    "basscss-utility-typography": "latest",
    "basscss-white-space": "latest",
    "flex-object": "latest"
  },
  "devDependencies": {
    "css-mqpacker": "^4.0.0",
    "cssnano": "^3.4.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-concat": "^2.6.0",
    "gulp-postcss": "^6.0.1",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-uglify": "^1.5.1",
    "http-server": "^0.8.5",
    "postcss-cssnext": "^2.3.0",
    "postcss-import": "^7.1.3"
  },
  "scripts": {
    "task": "gulp",
    "start": "http-server -o"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "no-trailing-spaces": 1,
      "indent": [
        1,
        2,
        {
          "VariableDeclarator": {
            "var": 2
          }
        }
      ],
      "no-multiple-empty-lines": [
        1,
        {
          "max": 1
        }
      ],
      "quotes": [
        1,
        "single",
        "avoid-escape"
      ],
      "spaced-comment": 1,
      "key-spacing": 1,
      "semi-spacing": 1,
      "space-in-parens": 1,
      "space-before-keywords": 1,
      "space-after-keywords": 1,
      "space-before-blocks": 1,
      "space-before-function-paren": [
        1,
        {
          "named": "never"
        }
      ],
      "no-lonely-if": 1,
      "require-jsdoc": [
        1,
        {
          "require": {
            "MethodDefinition": true,
            "ClassDeclaration": true
          }
        }
      ],
      "valid-jsdoc": [
        1,
        {
          "requireReturn": false,
          "prefer": {
            "return": "return"
          }
        }
      ]
    }
  }
}
